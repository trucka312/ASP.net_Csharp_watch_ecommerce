                                                </tr>
                                            </thead>
                                            <tbody id="tbHtml">
                                            </tbody>
                                        </table>
                                        <input type="hidden" id="tCurrentId" value="0" />
                                    </div>


                                </div>
                            </div>-->

                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                    <div class="form-group">
                        <a href="/admin/products" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </div>

            }


        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">

    </div>
    <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
